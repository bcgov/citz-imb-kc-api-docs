<div class="endpoint-block-details-section">
  <!-- Section Header -->
  <div class="endpoint-block-details-section-header">
    <h4>Parameters</h4>
  </div>

  <!-- Section Body -->
  <div class="endpoint-block-details-section-container">

    <% var routePathParams = endpoint.controller.pathParams; %>
    <% var routeQueryParams = endpoint.controller.query; %>

    <!-- No Params -->
    <% if (!routePathParams || (routePathParams && Object.keys(routePathParams).length === 0)) { %>
      <% if (!routeQueryParams || (routeQueryParams && Object.keys(routeQueryParams).length === 0)) { %>
        <p class="param-text font-small">No parameters are required to execute this endpoint.</p>
      <% } %>
    <% } %>

    <!-- Path Params -->
    <% if (routePathParams) { %>
      <% Object.entries(routePathParams).forEach(function([paramName, paramDetails]) { %>
        <!-- Summary: Required and Type -->
        <% if(paramDetails.required) { %>
          <p class="param-text font-small">(path param) <%= paramDetails.type %> <span class="required-param">* required</span></p>
        <% } else { %>
          <p class="param-text font-small">(path param) <%= paramDetails.type %> <span class="required-param">optional</span></p>
        <% } %>

        <!-- Input -->
        <label for="<%= 'pathParam-input-' + moduleName + '-' + index + '-' + paramName %>"><%= paramName %>:
        <input class="param-input" type="text" id="<%= 'pathParam-input-' + moduleName + '-' + index + '-' + paramName %>" placeholder="<%= paramName %>">
        <br /><br />
      <% }); %>
    <% } %>

    <!-- Query Params -->
    <% if (routeQueryParams) { %>
      <% Object.entries(routeQueryParams).forEach(function([paramName, paramDetails]) { %>
        <!-- Summary: Required and Type -->
        <% if(paramDetails.required) { %>
          <p class="param-text font-small">(query param) <%= paramDetails.type %> <span class="required-param">* required</span></p>
        <% } else { %>
          <p class="param-text font-small">(query param) <%= paramDetails.type %> <span class="required-param">optional</span></p>
        <% } %>

        <!-- Input -->
        <label for="<%= 'query-input-' + moduleName + '-' + index + '-' + paramName %>"><%= paramName %>:
        <input class="param-input" type="text" id="<%= 'query-input-' + moduleName + '-' + index + '-' + paramName %>" placeholder="<%= paramName %>">
        <br /><br />
      <% }); %>
    <% } %>

    <button class="execute-button endpoint-method-block-<%= endpoint.method %>" id="execute-btn-<%= moduleName %>-<%= index %>">
      Execute
    </button>
  </div>
</div>
